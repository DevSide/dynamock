{
  "name": "@dynamock/core",
  "version": "2.1.1",
  "description": "Dynamic core",
  "repository": "https://github.com/DevSide/dynamock",
  "keywords": [
    "fixtures",
    "mock",
    "server",
    "e2e",
    "end-to-end",
    "functional testing"
  ],
  "author": "DevSide",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "release": "semantic-release",
    "test": "yarn test:ts && yarn test:bin",
    "test:common": "NODE_OPTIONS='--enable-source-maps --experimental-vm-modules' jest",
    "test:ts": "yarn test:common src/__tests__/integrations.ts --config=./jest.config.js --coverage --passWithNoTests && chmod -R 777 ./coverage"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/hapi__joi": "^17.1.14",
    "jest": "^29.7.0",
    "semantic-release": "^24.1.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@4.5.0"
}
